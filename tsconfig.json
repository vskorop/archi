{
  "compilerOptions": {
    "outDir": "./dist/",
    //doesn't allow .ts without types
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    // allow synth. imports * as --> import md from 'path'
    "allowSyntheticDefaultImports": true,

  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}